#include<stdio.h>
#include<stdlib.h>
#include<math.h>
void potencia(float a,float b){
	a= a*a*a*a;
	b= b*b*b*b;
	printf("Os numeros elevados a potencia 4 resultam:\n%.2f\n%.2f\n",a,b);
}

void raiz(float a, float b ){
	a=sqrt(a);
	b=sqrt(b);
	printf("A raiz quadrada resulta:\n%.2f\n%.2f\n",a,b);
}

void fatorial(float a,float b){
	float resultadoA=1,resultadoB=1;
	for(int i=1;i<=a;++i){
		resultadoA *= i;
	}
	for(float i=1;i<=b;++i){
		resultadoB *= i;
	}
	printf("O fatorial dos numeros resulta:\n%.2f\n%.2f\n",resultadoA,resultadoB);
}
int main(){
	float x,y;
	char lgl;
	int menu=0;
	printf("Insira os dois valores reais\n");
	scanf("%f %f",&x,&y);
	system("cls");
	while(menu != 4){
	printf("\nMENU\n1 Para potenciar a 4\n2 Para fazer a raiz quadrada\n3 Para fatorial\n4 Para finalizar o programa\nDigite a opcao: ");
	scanf("%d",&menu);
	switch (menu){
		case 1:potencia(x,y);break;
		case 2:raiz(x,y);break;
		case 3:fatorial(x,y);break;
		case 4:printf("Finalizando programa\n"); break;
		default: printf("Opcao invalida\n");
	}
}
	return 0;
}

