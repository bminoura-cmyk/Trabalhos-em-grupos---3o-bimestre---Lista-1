#include <stdio.h>

int main() {
    int i, aprovados = 0;
    float notas[19][4];

    for (i = 0; i < 19; i++) {
        printf("Aluno %d:\n", i + 1);
        printf("Digite a nota P1: ");
        scanf("%f", &notas[i][0]);
        printf("Digite a nota P2: ");
        scanf("%f", &notas[i][1]);
        printf("Digite a nota Trabalho: ");
        scanf("%f", &notas[i][2]);

        notas[i][3] = (notas[i][0] + notas[i][1]) * 0.7 + notas[i][2] * 0.3;

        if (notas[i][3] >= 6.0) {
            aprovados++;
        }
    }

    printf("\nResultados:\n");
    printf("P1\tP2\tTrabalho\tMÃ©dia\n");

    for (i = 0; i < 19; i++) {
        printf("%.2f\t%.2f\t%.2f\t\t%.2f\n", notas[i][0], notas[i][1], notas[i][2], notas[i][3]);
    }

    printf("\nTotal de alunos aprovados: %d\n", aprovados);

    return 0;
}

